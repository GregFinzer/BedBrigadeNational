<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h2>Request A Bed</h2>
        </div>
    </div>
    <div class="row" id="rowSearchRun" style="display: @DisplaySearch">
        <div class="col-md-6">
            <label for="postalCode">ZipCode *</label>
            <input id="postalCode"
                   type="number"
            @bind="PostalCode"
            @oninput="HandleInputChange"
            @onkeyup="@HandleKeyDown"
                   maxlength="5" min="0" max="99999"
                   style="width: 300px"
                   class="form-control"
                   onKeyPress="javascript: if(this.value.length==5) return false;"
                   placeholder="Enter the zip code where you live">

            <div class="widget-body">
                <button id="search" type="button" class="btn btn-primary" @onclick="(() => HandleSearchClick())">Search</button>
            </div>
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h2>&nbsp;</h2>
        </div>
    </div>

    <div class="row" id="rowSearchResult">

        <div class="col-md-12">
            @if (!string.IsNullOrEmpty(PostalCodeError))
            {
                <p class="text-danger">@PostalCodeError</p>
            }
            @if (!string.IsNullOrEmpty(PostalCodeSuccess))
            {
                <p class="text-success"><b>@PostalCodeSuccess</b></p>

                <form class="col-md-12">
                    <div class="form-row" style="display: @DisplayLocations">

                        <label for="LocationSelector" class="col-md-3 col-form-label"><b>Select Location to request A Bed</b></label>
                        <SfDropDownList id="LocationSelector" TValue="int" TItem="LocationDistance" DataSource="@Locations" @bind-Value="selectedLocation.LocationId" Width="400px" HtmlAttributes="DropDownHtmlAttribute">
                            <DropDownListFieldSettings Value="LocationId" Text="Name"> </DropDownListFieldSettings>
                            <DropDownListTemplates TItem="LocationDistance">
                                <ItemTemplate>
                                    <span style="font-weight: bold">
                                        <span>@((context as LocationDistance).Name)</span>
                                        <span class='country'>@(" (" + (context as LocationDistance).Distance.ToString("0.00") + " miles away)")</span>
                                    </span>
                                </ItemTemplate>
                            </DropDownListTemplates>
                        </SfDropDownList>

                    </div>
                </form>

            }
        </div>
    </div>
</div>

<div class="container-fluid" style="display: @DisplayLocations">

    <EditForm Model="@newRequest" OnValidSubmit="@SaveRequest">
        <div class="row">
            <div class="col-md-12">
                <h2>&nbsp;</h2>
            </div>
        </div>

        <div class="row">

            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">Contact Information</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="firstname" class="formlabel required">First Name</label>
                            <SfTextBox ID="firstname" @bind-Value="newRequest.FirstName"></SfTextBox>
                        </div>
                        <div class="form-group ">
                            <label for="lastname" class="formlabel required">Last Name</label>
                            <SfTextBox ID="lastname" @bind-Value="newRequest.LastName"></SfTextBox>
                        </div>
                        <div class="form-group">
                            <label for="email" class="formlabel required">Email</label>
                            <SfTextBox ID="email" @bind-Value="newRequest.Email"></SfTextBox>
                        </div>
                        <div class="form-group">
                            <label for="phone" class="formlabel required">Phone</label>
                            <SfMaskedTextBox Mask='000-000-0000' ID="phone" @bind-Value="newRequest.Phone"></SfMaskedTextBox>                         
                        </div>
                    </div>

                </div>
            </div>


            <div class="col-md-3">

                <div class="card">
                    <div class="card-header">Delivery Address</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="street" class="formlabel required">Street</label>
                            <SfTextBox ID="street" @bind-Value="newRequest.Street"></SfTextBox>
                        </div>
                        <div class="form-group ">
                            <label for="city" class="formlabel required">City</label>
                            <SfTextBox ID="city" @bind-Value="newRequest.City"></SfTextBox>
                        </div>
                        <div class="form-group">
                            <label for="state" class="formlabel required">State</label>
                            <SfDropDownList TValue="string" TItem="UsState" PopupHeight="350px" PopupWidth="350px" Placeholder="Select a state" DataSource="@StateList" @bind-Value="newRequest.State">
                                <DropDownListFieldSettings Value="StateCode" Text="StateName"></DropDownListFieldSettings>
                            </SfDropDownList>
                        </div>
                        <div class="form-group">
                            <label for="zip" class="formlabel required">Postal Code</label>
                            <SfTextBox ID="zip" @bind-Value="newRequest.PostalCode"></SfTextBox>
                        </div>
                    </div>

                </div>

            </div>

            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">Bed Request Details</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="numbed" class="formlabel required">Number of Beds</label>
                            <SfNumericTextBox ID="numbed" TValue="int" Min="0" Max="50" HtmlAttributes="htmlattributeSize" @bind-Value="@NumericValue"></SfNumericTextBox>
                        </div>
                        <div class="form-group ">
                            <label for="city" class="formlabel required">Ages / Gender</label>
                            <SfTextBox ID="city" @bind-Value="newRequest.AgesGender"></SfTextBox>
                        </div>
                        <div class="form-group">
                            <label for="zip" class="formlabel">Special Instructions</label>
                            <SfTextBox ID="zip" @bind-Value="newRequest.SpecialInstructions" Multiline="true" HtmlAttributes="DescriptionHtmlAttribute"></SfTextBox>
                        </div>




                    </div>

                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-12">&nbsp;</div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <SfButton>Submit Request</SfButton>
            </div>
            <div class="col-md-9">
                <DataAnnotationsValidator />
                <ValidationSummary />
            </div>
        </div>


    </EditForm>

</div>

<div class="@strAlertType" role="alert" style="display: @strAlertDisplay">
    @strSubmitAlert
</div>



