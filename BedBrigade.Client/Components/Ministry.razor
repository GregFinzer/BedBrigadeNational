@page "/homerow4"

<div class="ministry-section-top widget widget-align-justify widget-size-100">
    <div class="Container " style="background-color:#e1e1e1;">
        <section class="flow">
            <div class="widget widget-image widget-align-justify widget-size-50 widget-image">
                <div class="widget-body">
                    <div class="field field-type-mediafield field-name-image-media">
                        <span class="name">Image</span>
                        <img src="@ImagePath" alt="ministry-img.jpg">
                    </div>
                    <div class="field field-type-textfield field-name-image-caption">
                    </div>
                </div>
            </div>
            <div class="widget widget-h-t-m-l-block widget-align-justify widget-size-50 widget-h-t-m-l-block">
                <div class="widget-body">
                    <h2>@Heading</h2>
                    <p>@Text</p>
                    <p><a href="@UrlPath">@ButtonCaption</a></p>
                </div>
            </div>
        </section>
    </div>
</div>


@code {

    [Parameter] public string ImagePath { get; set; } = "media/columbus/pages/Home/ministry-img.jpg";
    [Parameter] public string Heading { get; set; } = "A Ministry Started by St. Johns Lutheran Church Grove City";
    [Parameter] public string Text { get; set; } = "Bed Brigade Columbus was started in 2012 by St. Johns Lutheran Church in Grove City, Ohio.&nbsp; Since its inception we have Built and Delivered thousands of Beds. Our chapter of Bed Brigade was planted by the original Bed Brigade in Circleville, Ohio";
    [Parameter] public string ButtonCaption { get; set; } = "History of Bed Brigade";
    [Parameter] public string UrlPath { get; set; } = "/history";

}
