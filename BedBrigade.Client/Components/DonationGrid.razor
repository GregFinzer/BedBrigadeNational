@using BedBrigade.Common.Models
@using Syncfusion.Blazor.Notifications
@using Syncfusion.Blazor.Grids
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Buttons
@using FilterType = Syncfusion.Blazor.Grids.FilterType
@using EditMode = Syncfusion.Blazor.Grids.EditMode
@using LabelPosition = Syncfusion.Blazor.Buttons.LabelPosition

@if (Donations == null || Locations == null || DonationCampaigns == null)
{
    <Spinner />
}
else
{
    <div class="row mt-3">
        <div class="col-md-4 ps-3">
            <h3>@_lc.Keys["ManageDonations"]</h3>
        </div>
        <div class="col-md-6 ps-3 ps-md-0">
            <h3>@_lc.Keys["FilteredTotalColon"] @FilteredSum.ToString("C2")</h3>
        </div>
        <div class="col-md-2 ps-3 ps-md-0">
            <UserInfo/>
        </div>
    </div>
    <div class="col-md-12">
        <div class="content-wrapper">
            <div class="row">
                <div style="width: 100%">
                    <SfGrid ID="DonationGrid" @ref="Grid" TValue="Donation" DataSource=@Donations
                            ContextMenuItems=@ContextMenu
                            EnablePersistence="true"
                            ShowColumnChooser="true"
                            Toolbar=@ToolBar
                            AllowPaging="true"
                            AllowSorting="true"
                            AllowExcelExport="true"
                            ShowColumnMenu="true"
                            AllowFiltering="true"
                            AllowReordering="true"
                            AllowResizing="true"
                            AllowSelection="true"
                            AllowPdfExport="true"
                            AllowTextWrap="true"
                            AllowGrouping="true"
                            Width="100%">
                        <GridPageSettings PageSizes="@(new int[] { 5, 10, 15, 20, 25, 50 })" PageSize="25"/>
                        <GridEvents DataBound=@DataBound
                                    Destroyed=@OnDestroyed
                                    OnLoad=@OnLoad
                                    OnToolbarClick=@OnToolBarClick
                                    ContextMenuItemClicked=@OnContextMenuClicked
                                    OnActionBegin=@OnActionBegin
                                    OnActionComplete=@OnActionComplete
                                    TValue="Donation"/>
                        <GridTemplates>
                            <EmptyRecordTemplate>
                                <span>@RecordText</span>
                            </EmptyRecordTemplate>
                        </GridTemplates>
                        <GridFilterSettings Type="FilterType.CheckBox"></GridFilterSettings>
                        <GridSortSettings>
                            <GridSortColumns>
                                <GridSortColumn Field="LocationId" Direction="SortDirection.Ascending"/>
                            </GridSortColumns>
                        </GridSortSettings>
                        <GridGroupSettings Columns=@groupColumns ShowDropArea="false">
                            <CaptionTemplate>
                                @{
                                    var caption = (context as CaptionTemplateContext);
                                    //<div>@caption.Field - @caption.ForeignKey (@caption.Key)</div>
                                    var locations = Donations.Where(d => d.LocationId.ToString() == caption.Key); //.Sum(s => s.Amount);
                                    var locTotal = locations.Sum(s => s.NetAmount);
                                    //var locName = Locations.FirstOrDefault(l => l.LocationId == donation.LocationId).Name;
                                    <div class="row">
                                        <div class="fw-bold col-md-10">@caption.ForeignKey</div>
                                        <div class="fw-bold col-md-2 text-right">@string.Format("Total: {0:C2}", locTotal) </div>
                                    </div>
                                }

                            </CaptionTemplate>
                        </GridGroupSettings>
                        <GridEditSettings ShowDeleteConfirmDialog="true" >              
                        </GridEditSettings>
                        <GridColumns>
                            <GridColumn Field=@nameof(Donation.DonationId) IsPrimaryKey="true" Visible="false" ShowInColumnChooser="false"/>
                            <GridForeignColumn Field=@nameof(Donation.LocationId) ForeignDataSource=@Locations ForeignKeyField="LocationId" ForeignKeyValue="Name" ShowColumnMenu="false" HeaderText="Location" Type="ColumnType.String" AllowEditing="false" AllowFiltering="false" AutoFit="true" />
                            <GridColumn Field=@nameof(Donation.FirstName) ShowColumnMenu="false" HeaderText="First Name" Type="ColumnType.String" AllowEditing="false" AllowFiltering="true" AutoFit="true" />
                            <GridColumn Field=@nameof(Donation.LastName) ShowColumnMenu="false" HeaderText="Last Name" Type="ColumnType.String" AllowEditing="false" AllowFiltering="true" AutoFit="true"/>
                            <GridColumn Field=@nameof(Donation.Email) ShowColumnMenu="false" HeaderText="Email" Type="ColumnType.String" AllowEditing="false" AllowFiltering="true" AutoFit="true"/>
                            <GridColumn Field=@nameof(Donation.TaxFormSent) ShowColumnMenu="false" HeaderText="Tax Form Sent" Type="ColumnType.Boolean" AllowEditing="false" AllowFiltering="true" TextAlign="TextAlign.Center" DisplayAsCheckBox="true" AutoFit="true"/>
                            <GridColumn Field=@nameof(Donation.DonationDate) ShowColumnMenu="false" HeaderText="Donation Date" Type="ColumnType.Date" AllowEditing="false" AllowFiltering="true" AutoFit="true" Format="MM/dd/yyyy" />
                            <GridColumn Field=@nameof(Donation.NetAmount) ShowColumnMenu="false" HeaderText="Net Amount" HeaderTextAlign="TextAlign.Center" Type="ColumnType.Decimal" Format="C2" AllowEditing="false" AllowFiltering="false" TextAlign="TextAlign.Right" AutoFit="true" />
                            <GridForeignColumn Field=@nameof(Donation.DonationCampaignId) ForeignDataSource=@DonationCampaigns ForeignKeyField="DonationCampaignId" ForeignKeyValue="CampaignName" ShowColumnMenu="false" HeaderText="Donation Campaign" Type="ColumnType.String" AllowEditing="false" AllowFiltering="true" AutoFit="true" />
                        </GridColumns>
                    </SfGrid>

                </div>
            </div>
        </div>
    </div>
}


<SfDialog Target="#target" Width="75%" Height="75%" AllowDragging="true" IsModal="true" ShowCloseIcon="true" @bind-Visible="@TaxIsVisible">
    <DialogTemplates>
        <Header>@_lc.Keys["SendTaxForms"]</Header>
        <Content>
            <div class="col-lg-12 control-section">
                <div id="listbox-control">
                    <div class="dual-list-wrapper">
                        <div class="dual-list-groupa">
                            <h4>@_lc.Keys["NotSent"]</h4>
                            <SfListBox @ref=@LB_NotSent Scope="@scope2" DataSource="@NotSent" TItem="Donation" Height="330px" TValue="string[]" @attributes="listbox1Attr">
                                <ListBoxFieldSettings Text="NameAndDate" Value="DonationId"></ListBoxFieldSettings>
                                <ListBoxToolbarSettings Items="@items"></ListBoxToolbarSettings>
                                <ListBoxTemplates TItem="Donation">
                                    <NoRecordsTemplate>
                                        <span>@_lc.Keys["NothingToSend"]</span>
                                    </NoRecordsTemplate>
                                </ListBoxTemplates>
                            </SfListBox>
                        </div>
                        <div class="dual-list-groupb">
                            <h4>@_lc.Keys["Send"]</h4>
                            <SfListBox @ref=@LB_Send Scope="@scope1" DataSource="@Send" Height="330px" TItem="Donation" TValue="string[]" @attributes="listbox2Attr">
                                <ListBoxFieldSettings Text="NameAndDate" Value="DonationId"></ListBoxFieldSettings>
                                <ListBoxTemplates TItem="Donation">
                                    <NoRecordsTemplate>
                                        <span>@_lc.Keys["NothingToSend"]</span>
                                    </NoRecordsTemplate>
                                </ListBoxTemplates>
                            </SfListBox>
                        </div>
                    </div>
                </div>
            </div>
        </Content>
    </DialogTemplates>
    <DialogButtons>
        <DialogButton Content="Send Tax Form" CssClass="btn btn-primary" IsPrimary="true" OnClick="@SendTax" />
        <DialogButton Content="Cancel" CssClass="btn btn-secondary" OnClick="@CloseTaxDialog" />
    </DialogButtons>
</SfDialog>

<div style="display: none">
    @_lc.Keys["Currency"]
    @_lc.Keys["DonationDate"]
    @_lc.Keys["Gross"]
    @_lc.Keys["PaymentProcessor"]
    @_lc.Keys["PaymentStatus"]
    @_lc.Keys["TaxFormSent"]
    @_lc.Keys["TransactionFees"]
    @_lc.Keys["TransactionId"]
</div>


@if (NoPaging)
{
    <style>
        .e-pager {
            display: none;
        }
    </style>
}


