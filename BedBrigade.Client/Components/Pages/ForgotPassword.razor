@page "/forgot-password"
@page "/forgot-password/{email:nonfile}"
@namespace BedBrigade.Client.Components.Pages

<PageTitle>Forgot Password</PageTitle>

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

            @if (_success)
            {
                <div class="alert alert-success" role="alert">Email sent</div>
            }
            else if (!string.IsNullOrWhiteSpace(_errorMessage))
            {
                <div class="alert alert-danger" role="alert">@_errorMessage</div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h1 class="h5 mb-3">Forgot Password</h1>

                        <EditForm Model="_model" OnValidSubmit="OnSubmitAsync">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <InputText id="email"
                                           class="form-control"
                                           @bind-Value="_model.Email"
                                           autocomplete="email" />
                                <ValidationMessage For="@(() => _model.Email)" />
                            </div>

                            <button type="submit" class="btn btn-primary" disabled="@_busy">
                                @if (_busy)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                }
                                Send Email
                            </button>
                        </EditForm>
                    </div>
                </div>
            }

        </div>
    </div>
</div>