@layout Layout.AdminLayout
@page "/administration/manage/fm"

<CheckAuth Roles=@RoleNames.CanManageMedia></CheckAuth>

<div class="row mt-3">
    <div class="col-md-10 ps-5 ps-md-2 d-none d-md-block">
        <h3>Manage Media</h3>
    </div>
    <div class="col-md-2 ps-5 ps-md-0 d-none d-md-block">
        <UserInfo />
    </div>
</div>

<MediaManager AllowedExtensions="@_allowedExtensions" 
              EnableFolderOperations="@_enableFolderOperations" 
              MaxFileSize="@_maxFileSize" 
              RootFolder="@_folderPath"
              MediaFolderName="@_mediaFolder"/>

