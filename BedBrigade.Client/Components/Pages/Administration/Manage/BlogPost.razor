@layout Layout.AdminLayout
@page "/administration/manage/blogpost/{ContentType}"
@namespace BedBrigade.Client.Components

<CheckAuth Roles=@RoleNames.CanCreateBlogPost></CheckAuth>

<BlogGrid @key="@ChildKey" ContentTypeName="@ContentType" />

@code {
    [Parameter] public string? ContentType { get; set; }
    private string ChildKey = Guid.NewGuid().ToString();

    protected override void OnParametersSet()
    {        
        ChildKey = Guid.NewGuid().ToString();
        StateHasChanged();
    } // Parameters SET


}