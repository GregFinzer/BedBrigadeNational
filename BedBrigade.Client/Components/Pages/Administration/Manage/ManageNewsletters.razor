@using Syncfusion.Blazor.Notifications
@using Syncfusion.Blazor.Grids
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Buttons
@using FilterType = Syncfusion.Blazor.Grids.FilterType
@using EditMode = Syncfusion.Blazor.Grids.EditMode
@using BedBrigade.Common
@using BedBrigade.Common.Logic;
@using BedBrigade.Common.Models

@layout Layout.AdminLayout
@page "/administration/manage/newsletters"
<CheckAuth Roles=@RoleNames.CanManageNewsletters></CheckAuth>

@if (NewsletterRecords == null)
{
    <Spinner />
}
else
{
    <br/>
    <h3 class="ms-3">Newsletters</h3>
    <div class="col-md-12">
    <div class="content-wrapper">
        <div class="row">
            <div style="width: 100%" >
                    <SfGrid @ref="Grid" TValue="Newsletter" DataSource=@NewsletterRecords
                            ContextMenuItems=@ContextMenu
                            EnablePersistence="true"
                            ShowColumnChooser="true"
                            Toolbar=@ToolBar
                            AllowPaging="true"
                            AllowSorting="true"
                            AllowExcelExport="true"
                            ShowColumnMenu="true"
                            AllowFiltering="true"
                            AllowReordering="true"
                            AllowResizing="true"
                            AllowSelection="true"
                            AllowPdfExport="true"
                            AllowTextWrap="true"
                            AllowGrouping="true"
                            Width="100%">
                        <GridPageSettings PageSizes="@(new int[]{5,10,15,20,25})" PageSize="15" />
                        <GridEvents DataBound=@DataBound Destroyed=@OnDestroyed OnLoad=@OnLoad OnToolbarClick=@OnToolBarClick OnActionBegin=@OnActionBegin TValue="Newsletter" />
                        <GridTemplates>
                            <EmptyRecordTemplate>
                                <span>@RecordText</span>
                            </EmptyRecordTemplate>
                        </GridTemplates>
                        <GridEditSettings Dialog=@DialogParams ShowDeleteConfirmDialog="true" Mode="@EditMode.Dialog">
                            <HeaderTemplate>
                                @{
                                    @HeaderTitle
                                }
                            </HeaderTemplate>
                            <FooterTemplate>
                                <button class="btn btn-primary" @onclick=@(() => Save(context as Newsletter)) IsPrimary="true">@ButtonTitle</button>
                                <button class="btn btn-secondary" @onclick="Cancel">@_lc.Keys["Cancel"]</button>
                            </FooterTemplate>
                            <Template>
                                @{
                                    Newsletter newsletterRec = (context as Newsletter)!;
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <SfDropDownList TItem="Location" TValue="Int32" Enabled=@AddMode DataSource="Locations" @bind-Value=@newsletterRec.LocationId Placeholder="@_lc.Keys["Location"]" FloatLabelType="FloatLabelType.Auto">
                                                    <DropDownListFieldSettings Text="Name" Value="LocationId" />
                                                </SfDropDownList>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <SfTextBox ID="newsletterName" @bind-Value=@newsletterRec.Name Enabled="true" Placeholder="@_lc.Keys["Name"]" FloatLabelType="FloatLabelType.Auto" />
                                        </div>
                                    </div>
                                }
                            </Template>
                        </GridEditSettings>
                        <GridFilterSettings Type="FilterType.CheckBox"></GridFilterSettings>
                        <GridSortSettings>
                            <GridSortColumns>
                                <GridSortColumn Field="@nameof(Newsletter.LocationId)" Direction="SortDirection.Ascending" />
                                <GridSortColumn Field="@nameof(Newsletter.Name)" Direction="SortDirection.Ascending" />
                            </GridSortColumns>
                        </GridSortSettings>
                        <GridColumns>
                            <GridColumn Field=@nameof(Newsletter.NewsletterId) IsPrimaryKey="true" Visible="false" ShowInColumnChooser="false" />
                            <GridForeignColumn Field=@nameof(Newsletter.LocationId) Visible=@IsLocationColumnVisible ShowColumnMenu="false" HeaderText="Location" ForeignDataSource=@Locations ForeignKeyField="LocationId" ForeignKeyValue="Name" AllowFiltering="true" AllowGrouping="true" AutoFit="true" />
                            <GridColumn Field=@nameof(Newsletter.Name) HeaderText="Name" AllowEditing="false" AllowFiltering="true" AutoFit="true" />
                        </GridColumns>
                    </SfGrid>

            </div>
        </div>
    </div>
    </div>
}

<style>

    .e-grid td.e-rowcell.e-focus.e-focused {
        box-shadow: none;
    }

    .e-grid th.e-headercell.e-focus.e-focused {
        box-shadow: none;
    }

    .e-dialog .e-dlg-header {
        font-size: 1.75rem;
        font-weight: 700;
    }

</style>