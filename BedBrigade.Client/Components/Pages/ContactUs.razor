@page "/contact-us"

<RotatorContainer RotatorTitle="Contact Us" ImagePath="pages/Contact" LocationId="1" />

<div class="container-fluid" style="display: @DisplaySearch">
    <SearchLocation @ref="SearchLocation" Title="Find a Bed Brigade Near Me" ResultType="DropDownList" ParentMethod="(childData)=>CheckChildData(childData)" />
</div>



<div class="container-fluid" style="display: @DisplayForm">

    <EditForm EditContext="@EC">
        <DataAnnotationsValidator />

        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">Contact Information</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="firstname" class="formlabel required">First Name</label>
                            <SfTextBox ID="firstname" @bind-Value="newRequest.FirstName"></SfTextBox>
                            <div style="font-size: smaller">
                                <ValidationMessage For="@(() => newRequest.FirstName)"></ValidationMessage>
                            </div>

                        </div>
                        <div class="form-group ">
                            <label for="lastname" class="formlabel required">Last Name</label>
                            <SfTextBox ID="lastname" @bind-Value="newRequest.LastName"></SfTextBox>
                            <div style="font-size: smaller">
                                <ValidationMessage For="@(() => newRequest.LastName)"></ValidationMessage>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email" class="formlabel required">Email</label>
                            <SfTextBox ID="email" @bind-Value="newRequest.Email"></SfTextBox>
                            <div style="font-size: smaller">
                                <ValidationMessage For="@(() => newRequest.Email)"></ValidationMessage>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="phone" class="formlabel required">Phone</label>
                            <SfMaskedTextBox Mask='(000) 000-0000' ID="phone" @bind-Value="newRequest.Phone"></SfMaskedTextBox>
                            <div style="font-size: smaller">
                                <ValidationMessage For="@(() => newRequest.Phone)"></ValidationMessage>
                            </div>
                        </div>
                    </div>

                </div>
            </div>




            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">Contact Message</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="inst" class="formlabel">Message</label>
                            <SfTextBox ID="inst" @bind-Value="newRequest.Message" Multiline="true" HtmlAttributes="DescriptionHtmlAttribute"></SfTextBox>
                            <div style="font-size: smaller">
                                <ValidationMessage For="@(() => newRequest.Message)"></ValidationMessage>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-12">&nbsp;</div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div>
                    <div class="alert alert-danger" role="alert" style="display: @MyValidationDisplay">
                        @MyValidationMessage
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3" style="text-align: center">
                <ReCAPTCHA @ref="reCAPTCHAComponent" OnSuccess="OnSuccess" OnExpired="OnExpired" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-3" style="text-align: center">
                <button class="btn btn-primary" @onclick="(SaveRequest)">Submit Request</button>
            </div>
            <div class="col-md-9">
            </div>
        </div>

    </EditForm>

</div>

<div class="container-fluid" style="display: @ResultDisplay">
    <div class="@AlertType" role="alert">
        @((MarkupString)ResultMessage)
    </div>
</div>



<style>
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }

    .required::after {
        content: '*';
        font-size: medium;
        font-weight: bold;
        margin-right: 4px;
        color: red;
    }

    .formlabel {
        color: #B4886B;
        font-weight: bold;
        font-size: small;
        display: block;
    }
</style>