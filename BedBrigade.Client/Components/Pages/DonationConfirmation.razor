@page "/donation-confirmation"

<PageTitle>@($"{_lc.Keys["TheBedBrigade"]} | {_lc.Keys["DonationConfirmation"]}")</PageTitle>
<RotatorContainer RotatorTitle="@_lc.Keys["DonationConfirmation"]" ImagePath="pages/Donate" LocationId="1" />

@if (string.IsNullOrEmpty(ErrorMessage))
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h2>Thank You For Your Donation!</h2>
                <p class="lead">Thank you for making a difference in the life of a child.</p>
                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Donation Details</h5>
                        <p><strong>Amount:</strong> @Amount?.ToString("C")</p>
                        <p><strong>Date:</strong> @DateTime.Now.ToShortDateString()</p>
                        <p><strong>Transaction ID:</strong> @TransactionId</p>
                    </div>
                </div>
                <a href="/" class="btn btn-primary mt-4">Return Home</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="alert alert-danger" role="alert">
            @ErrorMessage
        </div>
        <a href="/" class="btn btn-primary">Return Home</a>
    </div>
}
