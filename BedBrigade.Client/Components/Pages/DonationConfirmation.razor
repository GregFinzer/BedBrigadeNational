@page "/donation-confirmation"

<PageTitle>@($"{_lc.Keys["TheBedBrigade"]} | {_lc.Keys["DonationConfirmation"]}")</PageTitle>
<RotatorContainer RotatorTitle="@_lc.Keys["DonationConfirmation"]" ImagePath="pages/Donate" LocationId="1" />

@if (string.IsNullOrEmpty(ErrorMessage))
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h2>@_lc.Keys["ThankYouForYourDonation"]</h2>
                <p class="lead">@_lc.Keys["ThankYouForMakingADifferenceInTheLifeOfAChild"]</p>
                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">@_lc.Keys["DonationDetails"]</h5>
                        <p><strong>@_lc.Keys["AmountColon"]</strong> @Amount?.ToString("C")</p>
                        <p><strong>@_lc.Keys["DateColon"]</strong> @DateTime.Now.ToShortDateString()</p>
                        <p><strong>@_lc.Keys["TransactionIdColon"]</strong> @TransactionId</p>
                    </div>
                </div>
                <a href="/" class="btn btn-primary mt-4">@_lc.Keys["ReturnHome"]</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="alert alert-danger" role="alert">
            @ErrorMessage
        </div>
        <a href="/" class="btn btn-primary">@_lc.Keys["ReturnHome"]</a>
    </div>
}
