@using Syncfusion.Blazor.Notifications
@using Syncfusion.Blazor.Grids
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Buttons
@using FilterType = Syncfusion.Blazor.Grids.FilterType
@using EditMode = Syncfusion.Blazor.Grids.EditMode
@using BedBrigade.Data.Models

@if (Pages == null)
{
    <span class="spinner-grow m-5"></span>
    <span>Loading ....</span>
}
else
{
    <fieldset class="m-4">
        <legend>Pages</legend>
        <div class="col-md-12 control-sec">
            <div class="content-wrapper">
                <div class="row">
                    <SfGrid @ref="Grid" TValue="Content" DataSource=@Pages
                            ContextMenuItems=@ContextMenu
                            EnablePersistence="true"
                            ShowColumnChooser="true"
                            Toolbar=@ToolBar
                            AllowPaging="true"
                            AllowSorting="true"
                            AllowExcelExport="true"
                            ShowColumnMenu="true"
                            AllowFiltering="true"
                            AllowReordering="true"
                            AllowResizing="true"
                            AllowSelection="true"
                            AllowPdfExport="true"
                            AllowTextWrap="true"
                            AllowGrouping="true">
                        <GridPageSettings PageSizes="@(new int[]{5,10,15,20,25,30,35,40})" PageSize="40" />
                        <GridEvents DataBound=@DataBound Destroyed=@OnDestroyed OnLoad=@OnLoad OnToolbarClick=@OnToolBarClick OnActionBegin=@OnActionBegin TValue="Content" />
                        <GridTemplates>
                            <EmptyRecordTemplate>
                                <span>@RecordText</span>
                            </EmptyRecordTemplate>
                        </GridTemplates>
                        <GridEditSettings Dialog=@DialogParams ShowDeleteConfirmDialog="true" Mode="@EditMode.Dialog">
                            <HeaderTemplate>
                                @{
                                    @HeaderTitle
                                  }
                            </HeaderTemplate>
                            <Template>
                                @{
                                    Content content = (context as Content);
                                    <div class="row">
                                        <div class="col-md-4">
                                            <SfTextBox ID="name" @bind-Value=@content.Name Enabled="true" Placeholder="Page Name" FloatLabelType="FloatLabelType.Auto" />
                                        </div>
                                        <div class="col-md-8">
                                            <SfTextBox @bind-Value=@content.Title Enabled="true" Placeholder="Page Title" FloatLabelType="FloatLabelType.Auto" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-4">
                                            <SfTextBox @bind-Value=@content.LeftMediaId Enabled="true" Placeholder="Left Media Id" FloatLabelType="FloatLabelType.Auto" />
                                        </div>
                                        <div class="form-group col-md-4">
                                            <SfTextBox @bind-Value=@content.MiddleMediaId Enabled="true" Placeholder="Middle Media Id" FloatLabelType="FloatLabelType.Auto" />
                                        </div>
                                        <div class="col-md-4">
                                            <SfTextBox @bind-Value=@content.RightMediaId Enabled="true" Placeholder="Right Media Id" FloatLabelType="FloatLabelType.Auto" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <SfTextBox @bind-Value=@content.HeaderMediaId Enabled="true" Placeholder="Header Media Id" FloatLabelType="FloatLabelType.Auto" />
                                        </div>
                                        <div class="col-md-4">
                                            <SfTextBox @bind-Value=@content.FooterMediaId Enabled="true" Placeholder="Footer Media Id" FloatLabelType="FloatLabelType.Auto" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <SfTextBox @bind-Value=@content.UpdateUser Enabled="true" Placeholder="Updated By" FloatLabelType="FloatLabelType.Auto" />
                                        </div>
                                        <div class="col-md-4">
                                            <SfDateTimePicker @bind-Value=@content.UpdateDate Enabled="true" Placeholder="Updated On" FloatLabelType="FloatLabelType.Auto" />
                                        </div>
                                    </div>

                                }
                            </Template>
                            <FooterTemplate>
                                <SfButton CssClass="btn btn-primary" OnClick=@(() => Save(context as Content)) IsPrimary="true">@ButtonTitle</SfButton>
                                <SfButton CssClass="btn btn-primary" OnClick=@(() => EditPage(context as Content)) IsPrimary="true">@EditTitle</SfButton>
                                <SfButton OnClick="Cancel">Cancel</SfButton>
                            </FooterTemplate>
                        </GridEditSettings>
                        <GridFilterSettings Type="FilterType.CheckBox"></GridFilterSettings>
                        <GridSortSettings>
                            <GridSortColumns>
                                <GridSortColumn Field="LocationId" Direction="SortDirection.Ascending" />
                                <GridSortColumn Field="Name" Direction="SortDirection.Ascending" />
                            </GridSortColumns>
                        </GridSortSettings>
                        <GridGroupSettings Columns=@groupColumns ShowDropArea="false" />
                        <GridColumns>
                            <GridColumn Field=@nameof(Content.ContentId) IsPrimaryKey="true" Visible="false" ShowInColumnChooser="false" />
                            <GridForeignColumn Field=@nameof(Content.LocationId) ShowColumnMenu="false" HeaderText="Location" ForeignDataSource=@Locations ForeignKeyField="LocationId" ForeignKeyValue="Name" AllowFiltering="false" Width="15" />
                            <GridColumn Field=@nameof(Content.Name) ShowColumnMenu="false" HeaderText="Name" Type="ColumnType.String" AllowEditing="false" AllowFiltering="false" Width="15" />
                            <GridColumn Field=@nameof(Content.Title) ShowColumnMenu="false" HeaderText="Title" Type="ColumnType.String" AllowEditing="false" AllowFiltering="false" Width="15" />
                            <GridForeignColumn Field=@nameof(Content.ContentType) ForeignDataSource=@ContentTypes ForeignKeyField="Value" ForeignKeyValue="Name" HeaderText="Type" ShowColumnMenu="false" Type="ColumnType.String" AllowEditing="false" AllowFiltering="false" Width="15" />
                            <GridColumn Field=@nameof(Content.LeftMediaId) ShowColumnMenu="false" HeaderText="LeftMediaId" Type="ColumnType.String" AllowEditing="false" AllowFiltering="false" Width="15" />
                            <GridColumn Field=@nameof(Content.MiddleMediaId) ShowColumnMenu="false" HeaderText="MiddleMediaId" Type="ColumnType.String" AllowEditing="false" AllowFiltering="false" Width="15" />
                            <GridColumn Field=@nameof(Content.RightMediaId) ShowColumnMenu="false" HeaderText="RightMediaId" Type="ColumnType.String" AllowEditing="false" AllowFiltering="false" Width="15" />
                            <GridColumn Field=@nameof(Content.HeaderMediaId) ShowColumnMenu="false" HeaderText="HeaderMediaId" Type="ColumnType.String" AllowEditing="false" AllowFiltering="false" Width="15" />
                            <GridColumn Field=@nameof(Content.FooterMediaId) ShowColumnMenu="false" HeaderText="FooterMediaId" Type="ColumnType.String" AllowEditing="false" AllowFiltering="false" Width="15" />
                            <GridColumn Field=@nameof(Content.UpdateUser) ShowColumnMenu="false" HeaderText="Updated By" Type="ColumnType.String" Format="###.##" AllowEditing="false" AllowFiltering="false" Width="15" />
                            <GridColumn Field=@nameof(Content.UpdateDate) ShowColumnMenu="false" HeaderText="Updated On" Type="ColumnType.Date" AllowEditing="false" AllowFiltering="false" Width="15" />
                        </GridColumns>
                    </SfGrid>

                </div>
            </div>
        </div>
    </fieldset>
}


<SfToast ID="SaveToast" @ref=@ToastObj Title="@ToastTitle" Width="300" Timeout=@ToastTimeout Target="#LocationTarget">
    <ToastPosition X="Center" Y="Top"></ToastPosition>
</SfToast>

<SfDialog Width="400" MinHeight="50" @bind-Visible=@DialogPageNameVisible IsModal="true" ShowCloseIcon="true">
    <DialogTemplates>
        <Header>Page Name & Title</Header>
        <Content>
            <EditForm id="Page" Model=@content OnValidSubmit=@DialogPageNewOnClickHandler>
                <div class="row">
                    <div class="col-md-12">
                        <SfTextBox ID="name" @bind-Value=@content.Name Enabled="true" Placeholder="Page Name" FloatLabelType="FloatLabelType.Auto" />
                    </div>
@*                    <div class="col-md-8">
                        <SfTextBox @bind-Value=@content.Title Enabled="true" Placeholder="Page Title" FloatLabelType="FloatLabelType.Auto" />
                    </div>
                    *@
                </div>
                <div class="e-footer-content">
                    <SfButton>Save</SfButton>
                </div>
            </EditForm>
        </Content>
    </DialogTemplates>
</SfDialog>


@if (NoPaging)
{
    <style>
        .e-pager {
            display: none;
        }
    </style>
}

