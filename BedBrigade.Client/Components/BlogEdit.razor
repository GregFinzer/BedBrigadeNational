@using BedBrigade.Common.Models
@using System.ComponentModel.DataAnnotations
@using System.Diagnostics


<div class="container-fluid">

    @switch (PageMode)
    {
        case "Edit":

            <EditForm Model="@BlogEditItem" OnSubmit="@FormSubmitted">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="row">
                    <!-- Left Column - Vertically Centered -->
                    <div class="col-md-4 d-flex align-items-center justify-content-start">
                        <div class="h-100 d-flex align-items-center">                          
                            <span class="badge bg-secondary text-white p-3 rounded-pill shadow" style="font-size: 1.1rem;">                               
                                @PageTitle
                            </span>
                        </div>
                    </div>                  

                    <!-- Center Column - Vertically and Horizontally Centered -->
                    <div class="col-md-4 d-flex justify-content-center align-items-center">
                        <button class="btn btn-primary" style="width: 230px" @onclick="ViewBlog">
                            <i class="fas fa-eye"></i>&nbsp;@_lc.Keys["Preview"]
                        </button>
                    </div>

                    <!-- Right Column - Vertically Centered and Aligned to the Right -->
                    <div class="col-md-4 d-flex justify-content-end align-items-center text-end">
                        <button type="submit" class="btn btn-primary me-2" style="width: 180px">
                            <i class="fas fa-save"></i>&nbsp;@_lc.Keys["Save"]
                        </button>
                        <button class="btn btn-secondary" style="width: 230px" @onclick="CancelEdit">
                            @_lc.Keys["Cancel"]&nbsp;<i class="fas fa-times-circle"></i>
                        </button>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="card shadow h-100">
                            <div class="card-header">
                                <h6 class="m-0 font-weight-bold text-dark">@_lc.Keys["Content"]</h6>
                            </div>
                            <div class="card-body">
                                <label style="font-weight: bold">@_lc.Keys["Title"]:</label>
                                <input @bind="BlogEditItem.Title" class="form-control"  maxlength="255" />
                                <div style="font-size: smaller">
                                    <ValidationMessage For="@(() => BlogEditItem.Title)"></ValidationMessage>
                                </div>
                                <label for="BlogItemContent" style="font-weight: bold">@_lc.Keys["Content"]:</label>
                                <SfRichTextEditor ID="BlogItemContent" @bind-Value="@BlogEditItem.ContentHtml">
                                    <RichTextEditorToolbarSettings Items="@EditorToolBar" />
                                </SfRichTextEditor>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card shadow h-100">
                            <div class="card shadow h-100">
                                <div class="card-header">
                                    <h6 class="m-0 font-weight-bold text-dark">@_lc.Keys["Images"]</h6>
                                </div>
                                <div class="card-body">
                                    @if (BlogEditItem.OptImagesUrl.Count > 0)
                                    {
                                        <div class="alert alert-info" role="alert" style="font-size: 0.85rem;">
                                            @_lc.Keys["BlogEditPageInstruction"]
                                        </div>
                                    }
                                    <div class="image-grid">
                                        @foreach (var image in BlogEditItem.OptImagesUrl)
                                        {
                                            bool DelStatus = GetImageDelStatus(image);

                                            var imageCurrent = Path.GetFileName(BlogHelper.NormalizePath(image));
                                            var imageMain = Path.GetFileName(BlogHelper.NormalizePath(BlogEditItem.MainImageUrl));
                                            if (SelectedMainImage != null && SelectedMainImage.Length > 0)
                                            {
                                                imageMain = Path.GetFileName(SelectedMainImage); // the last selected main image
                                            }

                                            <div class="image-item @(imageCurrent == imageMain ? "main-image" : "")">
                                                <img src="@image" alt="Image" @onclick="() => SelectMainImage(image)">
                                                <!-- Check if the image is in the lstFileDelete, and set the checkbox state accordingly -->
                                                <input type="checkbox" checked="@DelStatus" @onchange="e => ToggleImageDeletion(e, image)">
                                                <button class="view-icon" @onclick="@(() => ShowImagePreview(image))">
                                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                                </button>
                                            </div>
                                        }
                                    </div>

                                    @if(BlogEditItem.ContentId > 0 && BlogEditItem.FileUploaded.Count > 0)
                                    {
                                        <div id="edit-warning-message" class="alert alert-info" role="alert" style="width: 100%; margin: 0; padding: 8px 15px; font-size: 0.85rem;">
                                            @_lc.Keys["BlogEditPageWarning"]
                                        </div>
                                    }

                                    <div>

                                        <!-- File Upload -->
                                        <SfUploader @ref="UploaderRef"                                            
                                        AllowedExtensions="@BlogModuleImagesExt"                                        
                                        ShowFileList="true"                                        
                                        DropArea="#DropArea"
                                        MaxFileSize="@BlogModuleFileSize"
                                        AllowMultiple="true"                                         
                                        AutoUpload="true">
                                            <UploaderEvents ValueChange="@OnUploadChange">
                                            </UploaderEvents>                                              
                                        </SfUploader>
                                    </div>

                                    <div id="DropArea">
                                        <p>@_lc.Keys["BlogEditDragDrop"]</p>
                                        <p>
                                            <small class="upload-info">
                                                @_lc.Keys["MaxFileSize"]: <b>@(BlogModuleFileSize / (1024 * 1024)) MB</b>&nbsp;|&nbsp;
                                                @_lc.Keys["ImageFileFormat"]:&nbsp;<span class="file-types">@BlogModuleImagesExt</span>
                                            </small>
                                        </p>
                                    </div>
                                </div>


                                @if (BlogEditItem.FileDelete.Count > 0)
                                {
                                    <div class="alert alert-warning" role="alert">
                                        <strong>@($"{BlogEditItem.FileDelete.Count}")</strong>&nbsp;
                                        @_lc.Keys["BlogEditFileDelete"]
                                    </div>
                                }

                                @if(isMainImageInDeleteList){
                                <div class="alert alert-warning" role="alert">
                                        @_lc.Keys["BlogEditMainImage"]
                                    </div>
                                }

                                </div>
                            </div>                       
                        </div>                    
                    </div>

                <div class="row">
                    <div class="col-md-6 jd-flex justify-content-center align-items-left">
                        <button type="submit" class="btn btn-primary" style="width: 180px"><i class="fas fa-save"></i>&nbsp;@_lc.Keys["Save"]</button>
                        <button class="btn btn-secondary" style="width: 230px" @onclick="CancelEdit">@_lc.Keys["Cancel"]&nbsp;<i class="fas fa-times-circle"></i></button>
                    </div>

                    <div class="col-md-6 jd-flex justify-content-center align-items-end float-end text-end">
                        <button class="btn btn-primary" style="width: 230px" @onclick="ViewBlog"><i class="fas fa-eye"></i>&nbsp;@_lc.Keys["Preview"]</button>
                    </div>          

                </div>

            </EditForm>

            break;

        case "View":

            <div class="details-view">
                <BlogView CurrentBlog="BlogEditItem"
                OnClose="CloseView"
                ParentFrame="Grid" />
            </div>

            break;

        case "Image":

            <div class="preview-container">
                <div class="preview-header">
                    <span>@_lc.Keys["ImagePreview"]</span>
                    <button class="btn btn-primary" @onclick="ClosePreview">@_lc.Keys["Close"]</button>
                </div>
                <div class="preview-content" style="text-align:center;">
                    <img src="@selectedImageUrl" style="max-width:100%; height:auto;" />
                </div>
            </div>

            break;
    }

</div>
  


<style>
    /* Hide the delete (trash) icon */
    .e-file-delete-btn {
        display: none !important;
    }

    details-view {
        width: 100%; /* Full width of the wrapper */
        background-color: #fff; /* White background for the content */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Add a subtle shadow */
        overflow: hidden; /* Clip overflowing content */
        padding: 20px;
    }

    .image-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 10px;
    }

    .image-item {
        position: relative;
        width: 100%;
        aspect-ratio: 1 / 1;
        overflow: hidden;
        border: 2px solid #ccc; /* Thin border for all images */
        border-radius: 5px;
    }

        .image-item img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            cursor: pointer;
        }

        .image-item input[type="checkbox"] {
            position: absolute;
            top: 5px;
            left: 5px;
        }

        .image-item .view-icon {
            position: absolute;
            bottom: 5px;
            right: 5px;
            cursor: pointer;
            background: rgba(0, 0, 0, 0.5);
            color: white;
            padding: 2px 5px;
            border-radius: 5px;
            border: none; /* Remove default button border */
            outline: none; /* Remove focus outline */
            font-size: 14px; /* Adjust size to match the original span */
            line-height: 1;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: auto;
            height: auto;
        }

            .image-item .view-icon i {
                margin: 0; /* Reset margin on FontAwesome icon */
                font-size: 14px; /* Ensure icon size is as expected */
            }

    .main-image {
        border: 4px solid green; /* Thicker green border for main image */
    }
    
    .upload-panel {
        margin-bottom: 10px;
    }


    .preview-container {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 90vw;
        height: 90vh;
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    .preview-header {
        padding: 10px;
        background: #f8f9fa;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-weight: bold;
    }

    .preview-content {
        flex-grow: 1;
        overflow: auto; /* Enables scrolling if content is long */
        padding: 20px;
    }

</style>

